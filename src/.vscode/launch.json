    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "sandbox",
            "program": "${workspaceFolder}/Atma.Sandbox/bin/Release/netcoreapp3.0/Atma.Sandbox.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Atma.Sandbox",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}